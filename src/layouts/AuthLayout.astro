---
import "../styles/global.css";
import { Image } from "astro:assets";
import logo from "@/assets/logo.png";

interface Props {
  title?: string;
}

const { title = "Reef Metrics" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background">
    <main class="min-h-screen flex flex-col items-center justify-center px-4 py-8">
      <!-- Logo and branding -->
      <a href="/" class="mb-8 flex items-center gap-2 hover:opacity-80 transition-opacity">
        <Image src={logo} alt="ReefMetrics Logo" class="h-8 w-auto" />
        <span class="text-xl font-bold text-foreground">ReefMetrics</span>
      </a>

      <!-- Content container -->
      <div class="w-full max-w-md">
        <slot />
      </div>
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

