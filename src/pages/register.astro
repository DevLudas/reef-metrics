---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { RegisterForm } from "@/components/auth";

const pageTitle = "Sign Up - Reef Metrics";

// Redirect authenticated users to measurements dashboard
const { user } = Astro.locals;
if (user) {
  return Astro.redirect("/dashboard");
}
---

<AuthLayout title={pageTitle}>
  <div class="space-y-6">
    <div class="space-y-2 text-center">
      <h1 class="text-2xl font-bold tracking-tight text-foreground">Create your account</h1>
      <p class="text-sm text-muted-foreground">Join Reef Metrics to manage and monitor your aquariums</p>
    </div>

    <RegisterForm client:load />
  </div>
</AuthLayout>
