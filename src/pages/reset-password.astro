---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { ResetPasswordForm } from "@/components/auth";

const pageTitle = "Reset Password - Reef Metrics";

// Get the token from URL query parameters
const token = Astro.url.searchParams.get("token");
---

<AuthLayout title={pageTitle}>
  <div class="space-y-6">
    <div class="space-y-2 text-center">
      <h1 class="text-2xl font-bold tracking-tight text-foreground">Create a new password</h1>
      <p class="text-sm text-muted-foreground">Enter your new password below to reset your account</p>
    </div>

    {
      token ? (
        <ResetPasswordForm client:load token={token} />
      ) : (
        <div class="rounded-lg bg-destructive/10 border border-destructive/30 p-4">
          <p class="text-sm text-destructive font-medium">
            Invalid or missing reset token. Please request a new password reset link.
          </p>
          <a
            href="/forgot-password"
            class="mt-3 inline-block text-sm font-medium text-destructive underline hover:text-destructive/90"
          >
            Request new link
          </a>
        </div>
      )
    }
  </div>
</AuthLayout>
