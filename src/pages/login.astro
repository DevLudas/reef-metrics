---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { LoginForm } from "@/components/auth";

const pageTitle = "Log In - Reef Metrics";
---

<AuthLayout title={pageTitle}>
  <div class="space-y-6">
    <div class="space-y-2 text-center">
      <h1 class="text-2xl font-bold tracking-tight text-foreground">Welcome back</h1>
      <p class="text-sm text-muted-foreground">Log in to your Reef Metrics account to manage your aquariums</p>
    </div>

    <LoginForm client:load />
  </div>
</AuthLayout>
